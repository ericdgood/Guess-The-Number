<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:gravity="center"
    android:background="@drawable/radius_corners">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/you_ran_out_of_guesses"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/losing_game_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="The random number was 7"
        android:textSize="18sp"
        android:padding="6dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/losing_game_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/try_again"
        android:layout_margin="16dp"
        android:background="@drawable/radius_corners_btn"
        android:textSize="18sp"/>

</LinearLayout>